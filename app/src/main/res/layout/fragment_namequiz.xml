<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"

    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <ImageView
            android:layout_width="373dp"
            android:layout_height="323dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="TODO"
            android:gravity="center"
            android:minHeight="220dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/wood_duck"
            tools:ignore="ImageContrastCheck">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@color/cardview_shadow_end_color"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="11sp"
            android:text="@string/play_quiz"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="18dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#F5F3F0F0"
            android:shadowColor="#C9A776"
            android:background="#50B654"
            android:layout_gravity="center_horizontal|bottom"
            android:text="@string/play"
            />

        <Button
            android:id="@+id/share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="40dp"
            android:background="#50B654"
            android:onClick="openwebsite"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:shadowColor="#C9A776"
            android:text="Open Facebook"
            android:textColor="#F5F3F0F0"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>
</layout>